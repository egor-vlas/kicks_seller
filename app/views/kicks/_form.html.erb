
<%= simple_form_for(@kick) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :tittle %>
    <%= f.input :description %>
    <%= f.input :price %>
    <br>
    <%= f.input_field :brand, collection: Kick::BRAND, prompt: "Select brand" %>
    <br>
    <%= f.input_field :brand, collection: Kick::CONDITION, prompt: "Select condition" %>
    <br>
    <%= f.file_field :pictures, multiple: true %>
   
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
