<p id="notice"><%= notice %></p>

<div class="container">
  
  <%= image_tag @profile.picture, class: "home-image" %>

  <p>
    <strong>First name:</strong>
    <%= @profile.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @profile.last_name %>
  </p>

  <p>
    <strong>User name:</strong>
    <%= @profile.user_name %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @profile.user_id %>
  </p>

  <%= link_to 'Edit', edit_profile_path(@profile) %> |
  <%= link_to 'Back', profiles_path %>
</div>
